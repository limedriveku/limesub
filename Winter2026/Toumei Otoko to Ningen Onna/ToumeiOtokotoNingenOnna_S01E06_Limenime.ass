Dialogue: 0,0:00:13.95,0:00:18.87,tanda,,0000,0000,0000,,THE INVISIBLE MAN\NAND HIS SOON-TO-BE WIFE
Dialogue: 0,0:13:40.41,0:13:43.42,tanda,,0000,0000,0000,,THE INVISIBLE MAN\NAND HIS SOON-TO-BE WIFE
Dialogue: 0,0:15:49.12,0:15:50.56,tanda,,0000,0000,0000,,"KUE SUS"
Dialogue: 0,0:16:12.21,0:16:15.21,tanda,,0000,0000,0000,,THE INVISIBLE MAN\NAND HIS SOON-TO-BE WIFE
Dialogue: 0,0:16:22.97,0:16:23.54,tanda,,0000,0000,0000,,BISA BICARA?
Dialogue: 0,0:16:23.54,0:16:24.44,tanda,,0000,0000,0000,,APA? BISA? JAM BERAPA?\NKAPAN PUN KAU MAU!
Dialogue: 0,0:16:24.44,0:16:25.11,tanda,,0000,0000,0000,,KALAU BEGITU, PUKUL 20.00
Dialogue: 0,0:16:25.11,0:16:25.86,tanda,,0000,0000,0000,,YA! BISA VIDEO CALL?
Dialogue: 0,0:16:25.86,0:16:26.47,tanda,,0000,0000,0000,,TIDAK. SUARA SAJA.\NBAIKLAH!
Dialogue: 0,0:16:28.68,0:16:32.47,tanda,,0000,0000,0000,,KARMA
Dialogue: 0,0:17:16.19,0:17:18.43,tanda,,0000,0000,0000,,"SURAT NIKAH"
