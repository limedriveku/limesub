Dialogue: 0,0:01:53.22,0:01:55.43,tanda,,0000,0000,0000,,TERKEJUT
Dialogue: 0,0:06:03.18,0:06:04.68,tanda,,0000,0000,0000,,BERTAHAN SAMPAI AKHIR
Dialogue: 0,0:06:40.21,0:06:43.47,tanda,,0000,0000,0000,,KABEDON! TOLONG DIAM DI PERPUSTAKAAN.
Dialogue: 0,0:08:26.19,0:08:30.20,tanda,,0000,0000,0000,,LUSA
Dialogue: 0,0:09:39.07,0:09:43.02,tanda,,0000,0000,0000,,MECHANICAL MARIE
Dialogue: 0,0:10:41.33,0:10:47.99,tanda,,0000,0000,0000,,PEMBEBASAN
Dialogue: 0,0:10:47.99,0:10:55.09,tanda,,0000,0000,0000,,BUKA
Dialogue: 0,0:15:55.06,0:15:57.06,tanda,,0000,0000,0000,,INI BATERAI SEL KERING KHUSUS\NYANG DIBUAT OLEH ZETES.
Dialogue: 0,0:15:57.06,0:15:59.77,tanda,,0000,0000,0000,,JANGAN MENIRU INI DENGAN BATERAI BIASA.
Dialogue: 0,0:17:01.44,0:17:03.76,tanda,,0000,0000,0000,,INI TIDAK ENAK
Dialogue: 0,0:23:30.97,0:23:31.83,tanda,,0000,0000,0000,,PRATINJAU
Dialogue: 0,0:23:38.83,0:23:39.47,tanda,,0000,0000,0000,,MECHANICAL MARIE
