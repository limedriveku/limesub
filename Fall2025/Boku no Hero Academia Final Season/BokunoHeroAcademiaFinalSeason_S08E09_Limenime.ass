Dialogue: 0,0:09:20.76,0:09:21.28,tanda,,0000,0000,0000,,PARA LULUSAN YANG SUDAH TERBIASA, SISWA\NBARU TAHUN KEDUA MANTAN TAHUN PERTAMA KAGET
Dialogue: 0,0:09:21.28,0:09:21.65,tanda,,0000,0000,0000,,SISWA BARU TAHUN KETIGA\NMANTAN TAHUN KEDUA MULAI MENERIMA
Dialogue: 0,0:11:30.27,0:11:32.85,tanda,,0000,0000,0000,,"UPACARA KELULUSAN"
Dialogue: 0,0:11:41.93,0:11:43.93,tanda,,0000,0000,0000,,"2-A (SEMENTARA)"
