Dialogue: 0,0:00:35.66,0:00:37.49,Default,,0,0,0,,Itu dia! Siapkan senjata!
Dialogue: 0,0:00:47.46,0:00:48.46,Default,,0,0,0,,Bunuh dia!
Dialogue: 0,0:01:08.35,0:01:10.15,Default,,0,0,0,,Mati kau, Bajingan!
Dialogue: 0,0:01:17.41,0:01:18.45,Default,,0,0,0,,Sial!
Dialogue: 0,0:01:41.85,0:01:43.64,Default,,0,0,0,,Sial! Di mana dia?
Dialogue: 0,0:01:43.72,0:01:44.97,Default,,0,0,0,,Ke mana dia pergi?
Dialogue: 0,0:01:45.06,0:01:46.60,Default,,0,0,0,,Kemari kau!
Dialogue: 0,0:01:46.68,0:01:47.69,Default,,0,0,0,,Bajingan!
Dialogue: 0,0:01:47.77,0:01:50.61,Default,,0,0,0,,{\i1}Dahulu ada seorang{\i0}\N{\i1}pembunuh bayaran legendaris.{\i0}
Dialogue: 0,0:01:51.48,0:01:53.11,Default,,0,0,0,,{\i1}Namanya…{\i0}
Dialogue: 0,0:01:56.78,0:01:59.41,Default,,0,0,0,,{\i1}Taro Sakamoto.{\i0}
Dialogue: 0,0:02:02.87,0:02:07.41,Default,,0,0,0,,{\i1}Dia ditakuti oleh semua gangster,{\i0}
Dialogue: 0,0:02:07.50,0:02:11.38,Default,,0,0,0,,{\i1}dikagumi oleh semua pembunuh bayaran.{\i0}
Dialogue: 0,0:02:12.38,0:02:14.30,Default,,0,0,0,,{\i1}Sampai suatu hari…{\i0}
Dialogue: 0,0:02:16.76,0:02:18.51,Default,,0,0,0,,Selamat datang!
Dialogue: 0,0:02:21.85,0:02:23.93,Default,,0,0,0,,{\i1}Dia jatuh cinta.{\i0}
Dialogue: 0,0:02:25.06,0:02:26.31,Default,,0,0,0,,{\i1}Dia pensiun,{\i0}
Dialogue: 0,0:02:27.39,0:02:28.43,Default,,0,0,0,,{\i1}menikah,{\i0}
Dialogue: 0,0:02:29.35,0:02:30.69,Default,,0,0,0,,{\i1}memiliki anak,{\i0}
Dialogue: 0,0:02:31.19,0:02:32.06,Default,,0,0,0,,{\i1}dan…{\i0}
Dialogue: 0,0:02:33.52,0:02:34.65,tanda,,0,0,0,,LANGSING
Dialogue: 0,0:02:34.73,0:02:37.94,Default,,0,0,0,,{\i1}Sakamoto menjadi gemuk.{\i0}
Dialogue: 0,0:04:12.25,0:04:15.08,tanda,,0,0,0,,{\an8}DAYS.1\NPEMBUNUH BAYARAN LEGENDARIS
Dialogue: 0,0:04:15.17,0:04:17.17,tanda,,0,0,0,,{\an8}TOKO SAKAMOTO
Dialogue: 0,0:04:17.25,0:04:18.84,Default,,0,0,0,,Pasti ini tempatnya.
Dialogue: 0,0:04:19.67,0:04:20.96,Default,,0,0,0,,Sudah lama aku mencarimu,
Dialogue: 0,0:04:21.46,0:04:22.76,Default,,0,0,0,,Pak Sakamoto.
Dialogue: 0,0:04:24.68,0:04:25.97,tanda,,0,0,0,,SAKAMOTO
Dialogue: 0,0:04:26.05,0:04:27.89,Default,,0,0,0,,Hei, Bos, lihat ini!
Dialogue: 0,0:04:28.47,0:04:32.27,Default,,0,0,0,,Jika aku mengenai target ini,\Nkau harus memberiku jus gratis!
Dialogue: 0,0:04:32.35,0:04:34.56,Default,,0,0,0,,Astaga.
Dialogue: 0,0:04:34.64,0:04:37.40,Default,,0,0,0,,Belakangan ini dia sering datang, ya?
Dialogue: 0,0:04:37.48,0:04:38.36,Default,,0,0,0,,Ya.
Dialogue: 0,0:04:43.11,0:04:45.36,Default,,0,0,0,,Sial!
Dialogue: 0,0:04:45.45,0:04:46.28,Default,,0,0,0,,Sekali lagi!
Dialogue: 0,0:04:46.36,0:04:49.08,Default,,0,0,0,,Bos, lihat, kali ini pasti tepat sasaran!
Dialogue: 0,0:04:49.83,0:04:50.66,Default,,0,0,0,,Aduh!
Dialogue: 0,0:04:50.74,0:04:52.66,tanda,,0,0,0,,{\an8}TINTA KALIGRAFI
Dialogue: 0,0:04:56.79,0:04:58.50,Default,,0,0,0,,Gawat.
Dialogue: 0,0:04:59.17,0:05:01.46,Default,,0,0,0,,Apa-apaan ini? Dasar berandal!
Dialogue: 0,0:05:01.55,0:05:02.84,Default,,0,0,0,,Celana putihku!
Dialogue: 0,0:05:02.92,0:05:05.59,Default,,0,0,0,,- Gawat! Sayang, bagaimana ini?\N- Beraninya kau!
Dialogue: 0,0:05:05.68,0:05:07.72,Default,,0,0,0,,Lepaskan aku!
Dialogue: 0,0:05:15.18,0:05:16.39,Default,,0,0,0,,Mati kau!
Dialogue: 0,0:05:27.53,0:05:29.37,Default,,0,0,0,,Dasar gemuk gila!
Dialogue: 0,0:05:30.07,0:05:33.70,Default,,0,0,0,,Terima kasih, Bos…
Dialogue: 0,0:05:33.79,0:05:35.79,Default,,0,0,0,,Sudah, sudah, jangan menangis.
Dialogue: 0,0:05:35.87,0:05:37.71,Default,,0,0,0,,Sudah, sudah!
Dialogue: 0,0:05:37.79,0:05:38.71,Default,,0,0,0,,Gerakan bagus.
Dialogue: 0,0:05:40.29,0:05:43.38,Default,,0,0,0,,Bolpoin ke rahang bawah,\Nlangsung ke arteri karotis.
Dialogue: 0,0:05:44.34,0:05:46.17,Default,,0,0,0,,Aku bisa melihatnya.
Dialogue: 0,0:05:47.63,0:05:50.09,Default,,0,0,0,,Lama tak jumpa, Pak Sakamoto.
Dialogue: 0,0:05:51.01,0:05:52.47,Default,,0,0,0,,Ini aku, Shin si Esper.
Dialogue: 0,0:05:53.39,0:05:54.68,tanda,,0,0,0,,{\an8}PEMBUNUH BAYARAN, ESPER\NSHIN
Dialogue: 0,0:06:00.06,0:06:02.82,Default,,0,0,0,,Jangan membunuhku dalam pikiranmu!
Dialogue: 0,0:06:02.90,0:06:04.28,Default,,0,0,0,,Ini aku, Shin!
Dialogue: 0,0:06:04.36,0:06:06.44,Default,,0,0,0,,Dahulu aku anak buahmu!
Dialogue: 0,0:06:09.03,0:06:11.12,Default,,0,0,0,,Jadi, benar, ya?
Dialogue: 0,0:06:11.20,0:06:12.37,Default,,0,0,0,,Kau bertobat
Dialogue: 0,0:06:12.45,0:06:14.95,Default,,0,0,0,,- dan membuka toko kelontong.\N- Ayo!
Dialogue: 0,0:06:15.04,0:06:16.87,tanda,,0,0,0,,TOKO SAKAMOTO
Dialogue: 0,0:06:16.95,0:06:19.37,Default,,0,0,0,,Kembalilah, Pak Sakamoto.
Dialogue: 0,0:06:19.46,0:06:20.63,Default,,0,0,0,,Bakatmu sia-sia!
Dialogue: 0,0:06:20.71,0:06:22.92,Default,,0,0,0,,Lihat dirimu. Tubuhmu jadi begitu!
Dialogue: 0,0:06:23.88,0:06:25.55,Default,,0,0,0,,{\i1}Masa pembunuhku sudah berakhir.{\i0}
Dialogue: 0,0:06:29.55,0:06:33.55,Default,,0,0,0,,{\i1}Dahulu kau ditakuti oleh semua gangster.{\i0}
Dialogue: 0,0:06:33.64,0:06:35.93,Default,,0,0,0,,{\i1}Sampai dijuluki{\i0}\N{\i1}"Pembunuh Bayaran Legendaris."{\i0}
Dialogue: 0,0:06:36.81,0:06:39.44,Default,,0,0,0,,Kenapa kau membuang semua itu?
Dialogue: 0,0:06:46.73,0:06:47.61,Default,,0,0,0,,{\i1}Enak!{\i0}
Dialogue: 0,0:06:48.19,0:06:50.57,Default,,0,0,0,,Dahulu kau hanya makan ransum.
Dialogue: 0,0:06:51.20,0:06:54.03,Default,,0,0,0,,Sejujurnya, aku hampir\Ntak mengenalimu lagi.
Dialogue: 0,0:07:03.42,0:07:04.84,tanda,,0,0,0,,{\an8}DILARANG MEROKOK
Dialogue: 0,0:07:04.92,0:07:07.09,Default,,0,0,0,,{\i1}Cepat sekali!{\i0}
Dialogue: 0,0:07:07.17,0:07:09.67,Default,,0,0,0,,{\i1}"Meski gemuk,{\i0}\N{\i1}aku bisa membunuhmu kapan saja."{\i0}
Dialogue: 0,0:07:09.76,0:07:11.26,Default,,0,0,0,,{\i1}Itukah yang dia maksud?{\i0}
Dialogue: 0,0:07:12.93,0:07:15.26,Default,,0,0,0,,Halo, Pak Sakamoto!
Dialogue: 0,0:07:15.35,0:07:17.43,Default,,0,0,0,,Maaf aku mengganggumu makan,
Dialogue: 0,0:07:17.52,0:07:19.23,Default,,0,0,0,,tapi aku mau minta tolong.
Dialogue: 0,0:07:19.31,0:07:21.35,Default,,0,0,0,,{\i1}Minta tolong kepada Pak Sakamoto?{\i0}
Dialogue: 0,0:07:22.35,0:07:25.61,Default,,0,0,0,,{\i1}Apa dia menyamar sebagai warga biasa{\i0}\N{\i1}untuk memesan pembunuhan?{\i0}
Dialogue: 0,0:07:27.57,0:07:31.15,Default,,0,0,0,,Pohon ini sudah sangat tinggi,\Naku tidak bisa memotong dahan-dahannya.
Dialogue: 0,0:07:31.65,0:07:33.49,Default,,0,0,0,,Mohon bantuannya, Pak Sakamoto.
Dialogue: 0,0:07:34.82,0:07:38.16,Default,,0,0,0,,Bagus! Kau hebat!
Dialogue: 0,0:07:38.87,0:07:42.08,Default,,0,0,0,,Pak Sakamoto,\Nputriku tidak mau makan sayuran.
Dialogue: 0,0:07:45.79,0:07:46.96,Default,,0,0,0,,Enak!
Dialogue: 0,0:07:47.80,0:07:50.34,Default,,0,0,0,,Kami hanya punya satu bola!
Dialogue: 0,0:07:55.18,0:07:56.68,Default,,0,0,0,,Terima kasih!
Dialogue: 0,0:07:58.56,0:08:00.64,Default,,0,0,0,,Apa kau tukang untuk warga kota?
Dialogue: 0,0:08:03.81,0:08:04.94,Default,,0,0,0,,Aku paham sekarang.
Dialogue: 0,0:08:05.02,0:08:08.82,Default,,0,0,0,,Kau pandai menyembunyikan\Nidentitas aslimu.
Dialogue: 0,0:08:08.90,0:08:11.07,Default,,0,0,0,,Namun, Pak Sakamoto,
Dialogue: 0,0:08:11.99,0:08:13.82,Default,,0,0,0,,dari sudut pandangku,
Dialogue: 0,0:08:14.91,0:08:17.07,Default,,0,0,0,,kau tampak konyol.
Dialogue: 0,0:08:17.74,0:08:18.74,Default,,0,0,0,,Aku akan kembali.
Dialogue: 0,0:08:21.29,0:08:22.83,Default,,0,0,0,,Dasar berandal!
Dialogue: 0,0:08:27.84,0:08:30.51,Default,,0,0,0,,{\i1}Sudah lima tahun{\i0}\N{\i1}sejak terakhir kami bertemu.{\i0}
Dialogue: 0,0:08:31.17,0:08:33.22,Default,,0,0,0,,{\i1}Dia berhenti begitu saja.{\i0}
Dialogue: 0,0:08:34.55,0:08:35.47,Default,,0,0,0,,{\i1}Namun…{\i0}
Dialogue: 0,0:08:36.09,0:08:39.60,Default,,0,0,0,,{\i1}Pak Sakamoto keren sekali!{\i0}
Dialogue: 0,0:08:39.68,0:08:43.02,Default,,0,0,0,,Meski gemuk, auranya tetap luar biasa!
Dialogue: 0,0:08:43.10,0:08:47.52,Default,,0,0,0,,Andai! Saja! Kami bekerja! Bersama! Lagi!
Dialogue: 0,0:08:47.61,0:08:48.69,Default,,0,0,0,,Jangan dilihat!
Dialogue: 0,0:08:50.48,0:08:52.78,Default,,0,0,0,,BOS
Dialogue: 0,0:08:54.03,0:08:55.07,Default,,0,0,0,,Halo?
Dialogue: 0,0:08:55.15,0:08:56.53,Default,,0,0,0,,{\i1}Kau sudah membujuknya?{\i0}
Dialogue: 0,0:08:57.03,0:08:57.91,Default,,0,0,0,,Belum, tapi…
Dialogue: 0,0:08:57.99,0:09:00.79,Default,,0,0,0,,{\i1}Kalau begitu, sudah kau bunuh?{\i0}
Dialogue: 0,0:09:03.29,0:09:04.29,Default,,0,0,0,,Bos.
Dialogue: 0,0:09:04.91,0:09:07.71,Default,,0,0,0,,Ayolah, apa itu perlu?
Dialogue: 0,0:09:07.79,0:09:11.59,Default,,0,0,0,,Sekarang Pak Sakamoto sangat gemuk.\NKurasa dia tak akan menjadi masalah…
Dialogue: 0,0:09:11.67,0:09:12.88,Default,,0,0,0,,Shin.
Dialogue: 0,0:09:13.80,0:09:18.14,Default,,0,0,0,,Jika seseorang menghilang dari geng,\Nkita menghapus mereka dari muka bumi.
Dialogue: 0,0:09:18.80,0:09:20.97,Default,,0,0,0,,Itu aturannya dan Sakamoto melanggarnya.
Dialogue: 0,0:09:21.47,0:09:23.47,Default,,0,0,0,,Kita tidak boleh membiarkannya.
Dialogue: 0,0:09:24.14,0:09:25.89,Default,,0,0,0,,Lagi pula, Shin,
Dialogue: 0,0:09:26.52,0:09:29.90,Default,,0,0,0,,jika kau tidak bisa,\Naku bisa mencari orang lain!
Dialogue: 0,0:09:29.98,0:09:32.57,Default,,0,0,0,,Jangan mengeluh atau kau juga akan…
Dialogue: 0,0:09:33.61,0:09:35.53,Default,,0,0,0,,Berisik.
Dialogue: 0,0:09:38.24,0:09:40.62,Default,,0,0,0,,Kurasa tidak ada pilihan lain…
Dialogue: 0,0:09:57.80,0:09:59.05,tanda,,0,0,0,,{\an8}VITAMIN UNTUK DUA HARI
Dialogue: 0,0:10:18.74,0:10:21.53,Default,,0,0,0,,{\i1}Jika tidak kulakukan,{\i0}\N{\i1}akan dilakukan orang lain.{\i0}
Dialogue: 0,0:10:25.24,0:10:26.95,Default,,0,0,0,,{\i1}Jadi, jika dia tetap harus mati…{\i0}
Dialogue: 0,0:10:32.13,0:10:34.84,Default,,0,0,0,,{\i1}sebaiknya aku sendiri yang membunuhnya.{\i0}
Dialogue: 0,0:10:36.59,0:10:40.05,Default,,0,0,0,,Hei, menurutmu ini kotoran apa?
Dialogue: 0,0:10:40.13,0:10:42.80,Default,,0,0,0,,Menjijikkan!
Dialogue: 0,0:10:44.31,0:10:46.52,Default,,0,0,0,,Kau anak yang kemarin.
Dialogue: 0,0:10:46.60,0:10:47.98,Default,,0,0,0,,Shin, 'kan?
Dialogue: 0,0:10:48.06,0:10:49.85,Default,,0,0,0,,Kau sudah datang lagi?
Dialogue: 0,0:10:51.27,0:10:54.86,Default,,0,0,0,,Lihat ini! Kurasa ini kotoran alien!
Dialogue: 0,0:10:55.69,0:10:57.49,Default,,0,0,0,,Maaf, Anak-Anak.
Dialogue: 0,0:10:59.82,0:11:01.74,Default,,0,0,0,,Ini waktunya perang.
Dialogue: 0,0:11:16.05,0:11:19.01,tanda,,0,0,0,,TERSANGKA PERAMPOKAN MASIH BURON!
Dialogue: 0,0:11:23.47,0:11:25.35,Default,,0,0,0,,Halo, Pak Sakamoto.
Dialogue: 0,0:11:26.26,0:11:30.10,Default,,0,0,0,,Aku akan meninggalkan kota hari ini,
Dialogue: 0,0:11:30.73,0:11:32.98,Default,,0,0,0,,jadi aku mampir untuk mengucapkan…
Dialogue: 0,0:11:38.53,0:11:39.53,Default,,0,0,0,,selamat tinggal!
Dialogue: 0,0:11:51.16,0:11:52.33,Default,,0,0,0,,{\i1}Permen batuk?{\i0}
Dialogue: 0,0:12:01.51,0:12:03.59,Default,,0,0,0,,{\i1}Sial, aku tidak bisa membaca pikirannya.{\i0}
Dialogue: 0,0:12:03.68,0:12:05.05,tanda,,0,0,0,,COKELAT
Dialogue: 0,0:12:08.64,0:12:09.68,Default,,0,0,0,,{\i1}Di mana dia?{\i0}
Dialogue: 0,0:12:10.56,0:12:11.98,tanda,,0,0,0,,PERMEN PELEGA BATUK
Dialogue: 0,0:12:27.74,0:12:28.83,tanda,,0,0,0,,{\an8}KUE SUS
Dialogue: 0,0:12:28.91,0:12:31.37,Default,,0,0,0,,{\i1}Sial! Aku harus perbaiki posisi dan…{\i0}
Dialogue: 0,0:12:40.38,0:12:41.30,Default,,0,0,0,,{\i1}Sial…{\i0}
Dialogue: 0,0:12:48.18,0:12:51.39,Default,,0,0,0,,{\i1}Apa yang kupikirkan…{\i0}
Dialogue: 0,0:13:00.40,0:13:03.32,Default,,0,0,0,,Makan malam hampir siap!\NTolong bantu menyiapkan meja.
Dialogue: 0,0:13:03.40,0:13:04.45,Default,,0,0,0,,Baik!
Dialogue: 0,0:13:06.45,0:13:08.49,Default,,0,0,0,,Dia sudah bangun!
Dialogue: 0,0:13:08.57,0:13:09.87,Default,,0,0,0,,Lihat!
Dialogue: 0,0:13:09.95,0:13:11.41,Default,,0,0,0,,Syukurlah.
Dialogue: 0,0:13:14.50,0:13:15.71,Default,,0,0,0,,Aku di mana?
Dialogue: 0,0:13:16.33,0:13:18.04,Default,,0,0,0,,Lantai dua toko.
Dialogue: 0,0:13:20.46,0:13:22.71,Default,,0,0,0,,Silakan ikut kami makan malam.
Dialogue: 0,0:13:22.80,0:13:23.63,Default,,0,0,0,,Apa?
Dialogue: 0,0:13:23.71,0:13:25.97,Default,,0,0,0,,- Aku…\N- Mau nasi porsi besar?
Dialogue: 0,0:13:26.05,0:13:28.39,Default,,0,0,0,,Super besar? Mega besar?
Dialogue: 0,0:13:29.64,0:13:30.93,Default,,0,0,0,,Porsi biasa saja.
Dialogue: 0,0:13:32.06,0:13:33.81,Default,,0,0,0,,- Selamat makan!\N- Selamat makan!
Dialogue: 0,0:13:33.89,0:13:36.73,Default,,0,0,0,,{\i1}Kenapa jadi begini?{\i0}
Dialogue: 0,0:13:36.81,0:13:38.10,Default,,0,0,0,,{\i1}Aku berusaha membunuhnya…{\i0}
Dialogue: 0,0:13:39.90,0:13:41.36,Default,,0,0,0,,{\i1}Tunggu, mungkin ini beracun!{\i0}
Dialogue: 0,0:13:42.98,0:13:45.19,Default,,0,0,0,,{\i1}Aku sudah dilatih agar kebal racun.{\i0}
Dialogue: 0,0:13:51.99,0:13:53.04,Default,,0,0,0,,Enak sekali…
Dialogue: 0,0:13:54.29,0:13:55.79,Default,,0,0,0,,Hangat sekali!
Dialogue: 0,0:13:57.04,0:13:59.42,Default,,0,0,0,,Reaksinya sama sepertimu dahulu.
Dialogue: 0,0:13:59.50,0:14:01.29,Default,,0,0,0,,Sama seperti Ayah!
Dialogue: 0,0:14:02.38,0:14:03.34,Default,,0,0,0,,{\i1}Apa ini?{\i0}
Dialogue: 0,0:14:03.92,0:14:05.30,Default,,0,0,0,,{\i1}Perasaan apa ini?{\i0}
Dialogue: 0,0:14:05.88,0:14:08.88,Default,,0,0,0,,{\i1}Aku belum pernah merasakan ini{\i0}\N{\i1}dalam satu pun pekerjaanku.{\i0}
Dialogue: 0,0:14:10.47,0:14:11.55,Default,,0,0,0,,{\i1}Aku paham sekarang.{\i0}
Dialogue: 0,0:14:12.97,0:14:14.77,Default,,0,0,0,,{\i1}Pak Sakamoto…{\i0}
Dialogue: 0,0:14:14.85,0:14:18.39,Default,,0,0,0,,{\i1}ingin melindungi momen-momen{\i0}\N{\i1}keseharian yang sederhana ini.{\i0}
Dialogue: 0,0:14:19.85,0:14:21.02,Default,,0,0,0,,{\i1}Itu sebabnya dia…{\i0}
Dialogue: 0,0:14:25.23,0:14:29.66,tanda,,0,0,0,,TOKO SAKAMOTO
Dialogue: 0,0:14:30.70,0:14:32.03,Default,,0,0,0,,Pak Sakamoto,
Dialogue: 0,0:14:32.12,0:14:33.12,Default,,0,0,0,,aku…
Dialogue: 0,0:14:37.71,0:14:39.08,Default,,0,0,0,,Terima kasih makan malamnya.
Dialogue: 0,0:14:43.25,0:14:45.88,tanda,,0,0,0,,TERIMA KASIH! DATANG LAGI.\N-TOKO SAKAMOTO
Dialogue: 0,0:14:50.30,0:14:52.68,Default,,0,0,0,,{\i1}Sekarang pun aku masih{\i0}
Dialogue: 0,0:14:52.76,0:14:54.35,Default,,0,0,0,,{\i1}bukan tandingannya.{\i0}
Dialogue: 0,0:15:04.65,0:15:07.07,Default,,0,0,0,,Ada apa, Shin?
Dialogue: 0,0:15:10.49,0:15:12.11,Default,,0,0,0,,Memalukan sekali.
Dialogue: 0,0:15:12.20,0:15:15.37,Default,,0,0,0,,Kau tidak bisa membunuhnya, 'kan?
Dialogue: 0,0:15:16.70,0:15:17.79,Default,,0,0,0,,Bos…
Dialogue: 0,0:15:17.87,0:15:18.91,Default,,0,0,0,,Apa?
Dialogue: 0,0:15:19.00,0:15:20.83,Default,,0,0,0,,Jangan membuat alasan.
Dialogue: 0,0:15:20.92,0:15:23.79,Default,,0,0,0,,Tolong biarkan Pak Sakamoto hidup!
Dialogue: 0,0:15:24.92,0:15:27.63,Default,,0,0,0,,- Menyedihkan sekali!\N- Kau kenapa, Shin?
Dialogue: 0,0:15:28.63,0:15:30.09,Default,,0,0,0,,Kenapa?
Dialogue: 0,0:15:30.17,0:15:32.18,Default,,0,0,0,,Kenapa kau melindungi Sakamoto?
Dialogue: 0,0:15:32.26,0:15:36.10,Default,,0,0,0,,Dia sudah memiliki tempat untuk pulang.
Dialogue: 0,0:15:36.18,0:15:39.52,Default,,0,0,0,,Sakamoto melanggar aturan dunia kita.
Dialogue: 0,0:15:39.60,0:15:41.85,Default,,0,0,0,,Dia mengabaikan tanggung jawabnya.
Dialogue: 0,0:15:41.94,0:15:43.35,Default,,0,0,0,,Jadi, kita harus membunuhnya.
Dialogue: 0,0:15:44.15,0:15:45.65,Default,,0,0,0,,Kalau begitu, biar kugantikan.
Dialogue: 0,0:15:45.73,0:15:47.32,Default,,0,0,0,,Aku saja yang mati.
Dialogue: 0,0:15:48.11,0:15:50.24,Default,,0,0,0,,Jadi, kumohon, ampuni Pak Sakamoto.
Dialogue: 0,0:15:51.07,0:15:52.86,Default,,0,0,0,,Kenapa kau melakukan ini demi dia?
Dialogue: 0,0:15:54.24,0:15:56.78,Default,,0,0,0,,Aku menodongkan pistolku\Nkepada orang yang kukagumi.
Dialogue: 0,0:15:57.70,0:15:59.24,Default,,0,0,0,,Ini caraku menebusnya.
Dialogue: 0,0:16:01.54,0:16:03.00,Default,,0,0,0,,Baiklah.
Dialogue: 0,0:16:03.08,0:16:06.25,Default,,0,0,0,,Kau mati, Sakamoto kubiarkan hidup.
Dialogue: 0,0:16:08.00,0:16:09.25,Default,,0,0,0,,{\i1}Dasar bodoh.{\i0}
Dialogue: 0,0:16:09.34,0:16:11.47,Default,,0,0,0,,{\i1}Tidak mungkin itu kubiarkan.{\i0}
Dialogue: 0,0:16:11.55,0:16:13.18,Default,,0,0,0,,{\i1}Mati saja, Bodoh.{\i0}
Dialogue: 0,0:16:14.09,0:16:15.43,Default,,0,0,0,,Aku mendengarnya.
Dialogue: 0,0:16:17.01,0:16:19.18,Default,,0,0,0,,Sudah kuduga kau tidak bisa dipercaya.
Dialogue: 0,0:16:19.26,0:16:20.81,Default,,0,0,0,,{\i1}Dia membaca pikiranku?{\i0}
Dialogue: 0,0:16:21.68,0:16:22.69,Default,,0,0,0,,Bunuh dia!
Dialogue: 0,0:16:22.77,0:16:23.98,Default,,0,0,0,,{\i1}Tidak ada pilihan lain.{\i0}
Dialogue: 0,0:16:24.77,0:16:27.02,tanda,,0,0,0,,TOKO SAKAMOTO
Dialogue: 0,0:17:11.82,0:17:13.53,Default,,0,0,0,,{\i1}Akan kuhancurkan kepalanya!{\i0}
Dialogue: 0,0:17:28.21,0:17:30.25,Default,,0,0,0,,{\i1}Aku bisa melihat semuanya dari sini.{\i0}
Dialogue: 0,0:17:34.05,0:17:35.05,Default,,0,0,0,,Sial!
Dialogue: 0,0:17:35.13,0:17:37.43,Default,,0,0,0,,Kalian sedang apa? Dia hanya sendirian!
Dialogue: 0,0:17:37.51,0:17:40.72,Default,,0,0,0,,Dia seolah-olah tahu\Napa yang akan kami lakukan.
Dialogue: 0,0:17:40.80,0:17:42.97,Default,,0,0,0,,Dia seorang esper!
Dialogue: 0,0:17:43.06,0:17:45.23,Default,,0,0,0,,Jika terlalu dekat, pikiranmu terbaca.
Dialogue: 0,0:17:45.31,0:17:47.10,Default,,0,0,0,,Jaga jarak kalian, kepung dia!
Dialogue: 0,0:17:58.66,0:18:00.28,Default,,0,0,0,,{\i1}Ini amunisi terakhirku.{\i0}
Dialogue: 0,0:18:01.95,0:18:03.62,Default,,0,0,0,,{\i1}Aku harus menerobos keluar.{\i0}
Dialogue: 0,0:18:09.12,0:18:10.00,Default,,0,0,0,,{\i1}Sial!{\i0}
Dialogue: 0,0:18:20.05,0:18:21.18,Default,,0,0,0,,{\i1}Jadi, ini akhirnya…{\i0}
Dialogue: 0,0:18:33.52,0:18:35.03,Default,,0,0,0,,Pak Sakamoto…
Dialogue: 0,0:18:35.11,0:18:37.07,Default,,0,0,0,,Sakamoto?
Dialogue: 0,0:18:37.15,0:18:38.03,Default,,0,0,0,,Bunuh dia!
Dialogue: 0,0:18:39.03,0:18:40.11,Default,,0,0,0,,Mati kau!
Dialogue: 0,0:18:47.45,0:18:48.46,Default,,0,0,0,,Bajingan…
Dialogue: 0,0:18:55.25,0:18:56.67,Default,,0,0,0,,Kubunuh kau!
Dialogue: 0,0:19:07.39,0:19:08.27,Default,,0,0,0,,Sial!
Dialogue: 0,0:19:12.52,0:19:13.98,Default,,0,0,0,,Mati kau!
Dialogue: 0,0:19:16.36,0:19:18.99,tanda,,0,0,0,,{\an8}SAMPAH
Dialogue: 0,0:19:27.04,0:19:29.41,Default,,0,0,0,,{\i1}Apa yang terjadi?{\i0}
Dialogue: 0,0:19:29.50,0:19:31.00,Default,,0,0,0,,Mati kau!
Dialogue: 0,0:19:35.25,0:19:36.84,Default,,0,0,0,,Jangan lawan dia sendirian.
Dialogue: 0,0:19:36.92,0:19:38.26,Default,,0,0,0,,Tembak dia bersamaan.
Dialogue: 0,0:19:42.43,0:19:43.55,Default,,0,0,0,,Sekarang!
Dialogue: 0,0:19:53.77,0:19:55.56,Default,,0,0,0,,Kau… bajingan!
Dialogue: 0,0:19:57.82,0:19:59.23,Default,,0,0,0,,{\i1}Hebat.{\i0}
Dialogue: 0,0:19:59.32,0:20:00.19,Default,,0,0,0,,{\i1}Dia…{\i0}
Dialogue: 0,0:20:01.90,0:20:03.61,Default,,0,0,0,,{\i1}Pembunuh Bayaran Legendaris,{\i0}
Dialogue: 0,0:20:04.45,0:20:05.87,Default,,0,0,0,,{\i1}Taro Sakamoto!{\i0}
Dialogue: 0,0:20:09.24,0:20:11.62,Default,,0,0,0,,Pak Sakamoto,\Ndari mana kau tahu aku di sini?
Dialogue: 0,0:20:17.71,0:20:19.88,Default,,0,0,0,,Apa? Pelacak?
Dialogue: 0,0:20:20.63,0:20:23.05,Default,,0,0,0,,{\i1}Kau memasangnya semalam?{\i0}
Dialogue: 0,0:20:23.13,0:20:25.14,Default,,0,0,0,,{\i1}Tidak ada yang luput darimu, ya?{\i0}
Dialogue: 0,0:20:26.39,0:20:27.76,Default,,0,0,0,,Pak Sakamoto,
Dialogue: 0,0:20:27.85,0:20:29.39,Default,,0,0,0,,ucapanku serius.
Dialogue: 0,0:20:29.97,0:20:31.81,Default,,0,0,0,,Apa pun hasilnya,
Dialogue: 0,0:20:32.35,0:20:35.31,Default,,0,0,0,,aku akan meninggalkan kota hari ini…
Dialogue: 0,0:20:36.52,0:20:37.40,tanda,,0,0,0,,SHIN
Dialogue: 0,0:20:37.48,0:20:38.94,Default,,0,0,0,,Apron?
Dialogue: 0,0:20:39.52,0:20:41.24,Default,,0,0,0,,Delapan ratus yen per jam.
Dialogue: 0,0:20:41.78,0:20:43.70,Default,,0,0,0,,Jika lembur…
Dialogue: 0,0:20:45.66,0:20:46.57,Default,,0,0,0,,kuberi tambahan.
Dialogue: 0,0:20:46.66,0:20:47.66,Default,,0,0,0,,{\i1}Apa?{\i0}
Dialogue: 0,0:20:55.87,0:20:57.54,tanda,,0,0,0,,TOKO SAKAMOTO
Dialogue: 0,0:20:57.63,0:20:58.79,Default,,0,0,0,,Pak Sakamoto,
Dialogue: 0,0:20:59.42,0:21:02.13,Default,,0,0,0,,bisakah kau tak makan ramen di sampingku?
Dialogue: 0,0:21:03.80,0:21:05.63,Default,,0,0,0,,Ini kemeja baru.
Dialogue: 0,0:21:06.39,0:21:09.05,Default,,0,0,0,,{\an8}Ditambah lagi, ramen kita hampir habis…
Dialogue: 0,0:21:09.14,0:21:10.97,Default,,0,0,0,,{\an8}Kami pulang!
Dialogue: 0,0:21:11.06,0:21:12.43,Default,,0,0,0,,Astaga!
Dialogue: 0,0:21:12.52,0:21:14.69,Default,,0,0,0,,Shin, apron itu cocok denganmu.
Dialogue: 0,0:21:14.77,0:21:16.02,Default,,0,0,0,,Benarkah?
Dialogue: 0,0:21:16.10,0:21:17.77,Default,,0,0,0,,Apik sekali!
Dialogue: 0,0:21:22.44,0:21:24.19,Default,,0,0,0,,Silakan, Bu.
Dialogue: 0,0:21:24.28,0:21:27.11,Default,,0,0,0,,Dari mana kau tahu?
Dialogue: 0,0:21:27.20,0:21:29.20,Default,,0,0,0,,Aku memang mencari ini!
Dialogue: 0,0:21:29.28,0:21:30.53,Default,,0,0,0,,Terima kasih, Nak.
Dialogue: 0,0:21:30.62,0:21:32.54,Default,,0,0,0,,Dia benar-benar esper!
Dialogue: 0,0:21:32.62,0:21:34.96,Default,,0,0,0,,Hei! Ayo bermain denganku!
Dialogue: 0,0:21:35.04,0:21:36.25,Default,,0,0,0,,Setelah selesai bekerja.
Dialogue: 0,0:21:36.92,0:21:37.83,Default,,0,0,0,,Ayolah!
Dialogue: 0,0:21:37.92,0:21:40.13,Default,,0,0,0,,Apa itu menyenangkan?
Dialogue: 0,0:21:40.21,0:21:42.96,Default,,0,0,0,,Aku belum tahu,
Dialogue: 0,0:21:43.71,0:21:46.38,Default,,0,0,0,,tapi ini jelas lebih baik\Ndaripada pekerjaan lamaku.
Dialogue: 0,0:21:46.47,0:21:48.55,Default,,0,0,0,,Apa pekerjaan lamamu?
Dialogue: 0,0:21:48.64,0:21:50.01,Default,,0,0,0,,{\i1}Kau mati jika beri tahu dia.{\i0}
Dialogue: 0,0:21:51.47,0:21:54.43,Default,,0,0,0,,Bisa dibilang aku semacam pembersih.
Dialogue: 0,0:21:54.52,0:21:55.52,Default,,0,0,0,,Pembersih masyarakat.
Dialogue: 0,0:22:02.48,0:22:03.94,Default,,0,0,0,,Cepat!
Dialogue: 0,0:22:05.24,0:22:06.70,Default,,0,0,0,,Selamat datang!
Dialogue: 0,0:23:32.45,0:23:37.45,Default,,0,0,0,,{\an8}Terjemahan subtitle oleh Sudirman Lius
